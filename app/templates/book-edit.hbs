<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input type="text" class="form-control" name="title" value=model.title}}
  </div>
  <div class="form-group">
    <label for="id">ID</label>
    {{input type="text" class="form-control" name="id" value=model.id readonly="true"}}
  </div>
  <button type="button" class="btn btn-primary" {{action "save"}}>
    Save
  </button>
  <button type="button" class="btn btn-warning" {{action "cancel"}}>
    Cancel
  </button>
</form>

{{#link-to 'books'}}Go to Book List{{/link-to}}
