<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="id">
      ID
    </label>
    <div class="col-sm-10">
      {{input type="text" class="form-control"
        name="id" value=model.id readonly="true"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="title">
      Title
    </label>
    <div class="col-sm-10">
      {{input type="text" class="form-control"
        name="title" value=model.title}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="published">
      Published
    </label>
    <div class="col-sm-10">
      {{pikaday-input class="form-control" format="MM/DD/YYYY"
        name="published" value=model.published}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="button" class="btn btn-primary"
          {{action "save"}}>
        Save
      </button>
      <button type="button" class="btn btn-warning"
          {{action "cancel"}}>
        Cancel
      </button>
      <button type="button" class="btn btn-danger"
          {{action "delete"}}>
        Delete
      </button>
    </div>
  </div>
</form>
