<form>
  <div class="form-group">
    <label for="id">ID</label>
    {{input type="text" class="form-control" name="id" value=model.id readonly="true"}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input type="text" class="form-control" name="title" value=model.title}}
  </div>
  <div class="form-group">
    <label>Published</label>
    {{pikaday-input class="form-control" value=model.published format="MM/DD/YYYY"}}
  </div>
  <button type="button" class="btn btn-primary" {{action "save"}}>
    Save
  </button>
  <button type="button" class="btn btn-warning" {{action "cancel"}}>
    Cancel
  </button>
  <button type="button" class="btn btn-danger" {{action "delete"}}>
    Delete
  </button>
</form>
