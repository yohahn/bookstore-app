<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input type="text" class="form-control" name="title" value=fields.title}}
  </div>
  <div class="form-group">
    <label>Published</label>
    {{pikaday-input class="form-control" format="MM/DD/YYYY"}}
  </div>
  <button type="button" class="btn btn-primary" {{action "new"}}>
    Save
  </button>
  <button type="button" class="btn btn-warning" {{action "cancel"}}>
    Cancel
  </button>
</form>
