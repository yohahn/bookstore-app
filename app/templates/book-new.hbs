<form class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label" for="title">
      Title
    </label>
    <div class="col-sm-10">
      {{input type="text" class="form-control"
        name="title" value=fields.title}}
    </div>
  </div>
  <div class="form-group">
    <label for="published" class="col-sm-2 control-label">
      Published
    </label>
    <div class="col-sm-10">
      {{pikaday-input class="form-control" format="MM/DD/YYYY"
        name="published" value=fields.published}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="button" class="btn btn-primary"
          {{action "new"}}>
        Save
      </button>
      <button type="button" class="btn btn-warning"
          {{action "cancel"}}>
        Cancel
      </button>
    </div>
  </div>
</form>
